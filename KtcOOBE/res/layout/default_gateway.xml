<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="50dip" >

    <TextView
        android:layout_width="200dip"
        android:layout_height="35dip"
        android:text="@string/default_gateway"
        android:textSize="@dimen/text_size_normal"
        android:textColor="@color/text_color_normal" />

    <cn.ktc.android.oobe.widget.InputIPAddress
        android:id="@+id/edtGatewayFour"
        android:layout_width="60dip"
        android:layout_height="35dip"
        android:layout_alignParentRight="true"
        android:background="@drawable/edit_text"
        android:gravity="center"
        android:inputType="numberDecimal"
        android:maxLength="3"
        android:textColor="@color/ip_edit_text"
        android:cursorVisible="false"
        android:imeOptions="actionDone|flagNoExtractUi|flagNoFullscreen" />

    <cn.ktc.android.oobe.widget.InputIPAddress
        android:id="@+id/edtGatewayThree"
        android:layout_width="60dip"
        android:layout_height="35dip"
        android:layout_marginRight="20dip"
        android:layout_toLeftOf="@id/edtGatewayFour"
        android:background="@drawable/edit_text"
        android:gravity="center"
        android:inputType="numberDecimal"
        android:maxLength="3"
        android:textColor="@color/ip_edit_text"
        android:cursorVisible="false"
        android:imeOptions="actionDone|flagNoExtractUi|flagNoFullscreen" />

    <cn.ktc.android.oobe.widget.InputIPAddress
        android:id="@+id/edtGatewayTwo"
        android:layout_width="60dip"
        android:layout_height="35dip"
        android:layout_marginRight="20dip"
        android:layout_toLeftOf="@id/edtGatewayThree"
        android:background="@drawable/edit_text"
        android:gravity="center"
        android:inputType="numberDecimal"
        android:maxLength="3"
        android:textColor="@color/ip_edit_text"
        android:cursorVisible="false"
        android:imeOptions="actionDone|flagNoExtractUi|flagNoFullscreen" />

    <cn.ktc.android.oobe.widget.InputIPAddress
        android:id="@+id/edtGatewayOne"
        android:layout_width="60dip"
        android:layout_height="35dip"
        android:layout_marginRight="20dip"
        android:layout_toLeftOf="@id/edtGatewayTwo"
        android:background="@drawable/edit_text"
        android:gravity="center"
        android:inputType="numberDecimal"
        android:maxLength="3"
        android:textColor="@color/ip_edit_text"
        android:cursorVisible="false"
        android:imeOptions="actionDone|flagNoExtractUi|flagNoFullscreen" />

</RelativeLayout>