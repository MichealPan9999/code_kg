<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_background"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:paddingLeft="45dp"
        android:paddingRight="45dp"
        android:paddingTop="32dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"           
            android:text="@string/launguage_title"
            android:textColor="@color/blue_color"
            android:textSize="45sp" />

        <LinearLayout          
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:paddingTop="10dp" >

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="69dp"
                android:background="@drawable/zero_white"
                android:padding="10dp" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:background="@drawable/zero_blue"
                android:padding="10dp" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:background="@drawable/zero_white"
                android:padding="10dp" />
             
            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:background="@drawable/zero_white"
                android:padding="10dp" />
                        
        </LinearLayout>

        <ImageView
            android:layout_width="1160dp"
            android:layout_height="40dp"
            android:layout_marginTop="7dp"
            android:layout_weight="0.39"
            android:src="@drawable/line_horizontal" />
    </LinearLayout>
       
     <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginLeft="330dp"
        android:layout_marginTop="90dp"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="200dp"
            android:layout_height="160dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"           
            android:background="@drawable/language_page" />

    </RelativeLayout>
    
     <RelativeLayout
        android:id="@+id/text_language_set"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"       
        android:layout_alignTop="@id/relativeLayout2"
        android:layout_toRightOf="@id/relativeLayout2">
			
         	 <Button
	            android:id="@+id/btn_country_set"
	            android:layout_width="170dp"
	            android:layout_height="45dp"	                         
	            android:layout_marginLeft="50dp" 
	            android:layout_marginTop="90dp"          	             
	            android:background="@drawable/button_new"
	            android:textColor="@color/white_color"
	            android:textSize="24dp" />
	        <Button
	            android:id="@+id/btn_language_set"
	            android:layout_width="170dp"
	            android:layout_height="45dp"
	            android:layout_alignParentLeft="true"                                   
	            android:layout_marginLeft="50dp"
	            android:layout_marginTop="165dp" 	            	             
	            android:background="@drawable/button_new"
	            android:textColor="@color/white_color"
	            android:textSize="24dp" />

    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_background"
        android:gravity="center_vertical" >

        <!-- button pre -->


        <!-- button next -->

        <Button
            android:id="@+id/btn_language_back"
            android:layout_width="115dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="250dp"
            android:background="@drawable/button_new"
            android:text="@string/back"
            android:textColor="@color/white_color"
            android:textSize="25dp" />

        <!-- button next -->

        <Button
            android:id="@+id/btn_language_next"
            android:layout_width="115dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="250dp"
            android:background="@drawable/button_new"
            android:text="@string/next"
            android:textColor="@color/white_color"
            android:textSize="25dp" />
    </RelativeLayout>

</RelativeLayout>