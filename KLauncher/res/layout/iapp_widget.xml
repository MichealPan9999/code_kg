<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_widget"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <!-- 第一排 1-5 -->
    <!-- 1 X-sign -->

    <RelativeLayout
        android:id="@+id/app_widget_1"
        android:layout_width="160dp"
        android:layout_height="110dp"
        android:layout_margin="10dp"
        android:addStatesFromChildren="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@drawable/iapp_widget_layout_background"
        android:padding="5dp" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/gong_1_unfoucus" />

        <ImageView
            android:id="@+id/app_widget_1_ic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
             />

        <com.ktc.launcher.utils.ScrollTextView
            android:id="@+id/app_widget_1_name"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:clickable="false"
            android:layout_alignParentBottom="true"
            android:ellipsize="marquee"
            android:gravity="center"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/iapp_appname_size" />
    </RelativeLayout>

    <!-- 2 multimedia -->

    <RelativeLayout
        android:id="@+id/app_widget_2"
        android:layout_width="160dp"
        android:layout_height="110dp"
        android:layout_margin="10dp"
