        android:layout_toRightOf="@+id/app_widget_1"
	android:descendantFocusability="beforeDescendants"
        android:background="@drawable/iapp_widget_layout_background"
        android:padding="5dp"
        tools:ignore="RtlHardcoded">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/gong_2_unfoucus" />

        <ImageView
            android:id="@+id/app_widget_2_ic"
